<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/add"
            android:layout_margin="10dp"
            android:id="@+id/add_family_button"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ListView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/pink"
        android:scrollbars="none"
        android:id="@+id/family_member_list">

    </ListView>
    <io.github.yuweiguocn.lib.squareloading.SquareLoading
        android:id="@+id/family_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:squareColor="#E91E63"
        app:squareSize="12dp"
        app:squareCorner="2dp"
        app:dividerSize="2dp"
        app:xCount="4"
        app:yCount="3" />
    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:textColor="@color/thinGray"/>
</RelativeLayout>